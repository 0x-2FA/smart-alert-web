@model List<smart_alert_web.Models.Event>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="mb-5 mt-5 undrln">Alert Messages</h1>
    <h5 class="mb-2"><i class="fa-solid fa-triangle-exclamation"></i> Please choose carefully the most important messages and alert all the citizens nearby. <i class="fa-solid fa-triangle-exclamation"></i></h5>
    <h5 class="mb-5">In case you think a message is not that important, tap on the dismiss button.</h5>

    <table class="table table-hover">
        <thead class="tbl mb-5">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Type</th>
                <th scope="col">Timestamp</th>
                <th scope="col">Location</th>
                <th scope="col"></th>
                <th scope="col"></th>

            </tr>
        </thead>
        <tbody>
                    
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.Id</td>
                    <td scope="row">@item.Type</td>
                    <td scope="row">@item.Timestamp</td>
                    <td scope="row">@item.Latitude, @item.Longitude</td>
                    <td> 
                        <div class="">
                                
                            <a asp-controller="Home" asp-action="DeleteEvent" asp-route-id="@item.Id" class="btn">Dismiss</a>


                        </div>
                            
                    </td>
                    <td> 
                        <div class="">
                                
                            <a asp-controller="Home" asp-action="ViewEvent" asp-route-id="@item.Id" class="btn">View</a>


                        </div>
                            
                    </td>
                </tr>
            }
                        
                    
        </tbody>

    </table>

</div>
